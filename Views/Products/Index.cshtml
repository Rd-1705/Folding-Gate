@model IEnumerable<foldingGate.Models.DB.Product>

<div class="container mt-5">
    <h2 class="text-center mb-4">Pilihan Produk & Spesifikasi Komponen</h2>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow">
                    <div class="card h-100 shadow">
                        <img src="~/images/products/@(string.IsNullOrEmpty(item.Gambar) ? "default.jpg" : item.Gambar)"
                             class="card-img-top" alt="@item.NamaProduk" style="height: 200px; object-fit: cover;">

                        <div class="card-body">
                            <h5 class="card-title">@item.NamaProduk</h5>
                            <p class="card-text"><strong>Spesifikasi:</strong><br />@item.Deskripsi</p>
                            <h4 class="text-danger">Rp @item.Harga.ToString("N0")</h4>
                        </div>
                    </div>
                    <div class="card-footer text-center">
                        <a asp-controller="Orders" asp-action="Create" asp-route-productId="@item.ProductId" class="btn btn-success">
                            Pesan Sekarang
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>